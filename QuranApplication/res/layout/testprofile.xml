<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quranapp.MainActivity" 
      android:background="#EFEFEF">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:scaleType="center"
        android:src="@drawable/baby"
           />

     <TextView
         android:id="@+id/first_name"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
    
         android:layout_below="@+id/imageView1"
         android:layout_marginTop="15dp"
         android:gravity="center"
         android:text="First Name"
         android:textSize="14sp" />
     <EditText
        android:id="@+id/firstname"
          android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imageView1"
         android:layout_marginTop="15dp"
         android:gravity="center"
         android:textSize="14sp" 
        android:visibility="gone"
        android:hint=" First name "/>

     <TextView
         android:id="@+id/last_name"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
          android:layout_below="@+id/imageView1"
         android:layout_marginTop="48dp"
         android:gravity="center"
         android:text="Last Name"
         android:textSize="14sp" />
     
      <EditText
        android:id="@+id/lastname"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
          android:layout_below="@+id/imageView1"
         android:layout_marginTop="48dp"
         android:gravity="center"
        android:visibility="gone"
        android:textSize="14sp" 
        
        android:hint=" last name "/>
     

     <TextView
         android:id="@+id/user_name"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/imageView1"
         android:layout_marginTop="84dp"
         android:gravity="center"
         android:text="User_Name"
         android:textSize="14sp" />

     <TextView
         android:id="@+id/student_quari"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/last_name"
         android:layout_below="@+id/user_name"
         android:layout_marginTop="16dp"
         android:gravity="center"
         android:text="Student"
         android:textSize="14sp" />
     
     <TextView
         android:id="@+id/registered_to"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/last_name"
         android:layout_below="@+id/student_quari"
         android:layout_marginTop="16dp"
         android:gravity="center"
         android:text="Quari Abdullah"
         android:textSize="14sp" />
     <Button
         android:id="@+id/edit_profile"
         android:layout_width="150dp"
         android:layout_height="32dp"
         android:layout_alignLeft="@+id/imageView1"
         android:layout_alignRight="@+id/imageView1"
         android:layout_below="@+id/registered_to"
         android:layout_marginTop="15dp"
         android:background="@drawable/button_style"
         android:drawableLeft="@drawable/ic_action_edit"
     android:gravity="left"
         android:paddingLeft="80dp"
         android:text="  Edit profile"
         android:textSize="13sp" />

     <Button
         android:id="@+id/save_changes"
         android:layout_width="150dp"
         android:layout_height="32dp"
         android:layout_alignLeft="@+id/imageView1"
         android:layout_alignRight="@+id/imageView1"
         android:layout_below="@+id/registered_to"
         android:layout_marginTop="15dp"
         android:background="@drawable/button_style" 
     android:gravity="center"
         android:text=" Save Changes"
          android:visibility="gone"
         android:textSize="13sp" />
     
     
    <Button
         android:id="@+id/change_image"
         android:layout_width="120dp"
         android:layout_height="35dp"
        android:layout_marginTop="165dp"
         android:layout_alignRight="@+id/imageView1"
         android:background="@drawable/just_round_corners"
         android:gravity="center"
         android:text="Change image"
         android:textSize="12sp" />

</RelativeLayout>

