<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
       android:background="#EFEFEF">

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:text="Find Your Account"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
         android:id="@+id/design"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/just_round_corners" 
          android:orientation="vertical" 
           android:layout_marginTop="20dp"
           >

         <TextView
        android:id="@+id/email_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Enter email address"
        android:textSize="18sp"
        android:textStyle="italic" />
        
        
        <EditText
        android:id="@+id/enter_email"
   android:layout_width="match_parent"
        android:layout_height="35dp"
         android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textEmailAddress" 
        android:background="@drawable/round_corners_textview"
        android:textColorHint="#9CA4A8" 
         android:hint="  abc_123@yahoo.com">

       
    </EditText>
         
        
</LinearLayout>
<Button
        android:id="@+id/send_email"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        
        android:layout_below="@+id/design"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:shadowColor="#f9f9f9"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Send"
        android:textColor="#52595C" />
<Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        
        android:layout_below="@+id/send_email"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:shadowColor="#f9f9f9"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Cancel"
        android:textColor="#52595C" />
    
</LinearLayout>