<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#EFEFEF"
     android:paddingRight="16dp"
          android:paddingLeft="16dp"
    >

     <TextView
       android:id="@+id/changepassword"
       android:layout_width="wrap_content"
  android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:text="Change Password"
       android:textSize="20sp"
       android:textStyle="bold"
      />
     <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changepassword"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="18sp"
        android:textStyle="italic" 
          />

    <EditText
        android:id="@+id/pass_word"
        android:layout_width="match_parent"
      android:layout_height="30dp"
            android:layout_below="@+id/password"
        android:background="@drawable/round_corners_textview"
        android:ems="10"
        android:textSize="18sp"
        android:hint="********  "
        android:inputType="textPassword"
        android:textColorHint="#9CA4A8"
          android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/new_password"
      android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:layout_below="@+id/pass_word"
            android:layout_marginTop="30dp"
        android:text="New Password"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/newpassword"
         android:layout_width="match_parent"
  android:layout_height="30dp"
               android:layout_below="@+id/new_password"
        android:background="@drawable/round_corners_textview"
        android:ems="10"
        android:hint="********  "
        android:inputType="textPassword"
    android:textSize="18sp"
        android:textColorHint="#9CA4A8"
          android:paddingLeft="10dp" />
    
     <TextView
         android:id="@+id/confirm_password"
       android:layout_width="wrap_content"
         android:layout_height="wrap_content"
              android:layout_below="@+id/newpassword"
         android:layout_marginTop="28dp"
         android:text=" Confirm Password"
         android:textSize="18sp"
         android:textStyle="italic" />

    <EditText
        android:id="@+id/confirmpassword"
    android:layout_width="match_parent"
      android:layout_height="30dp"
                 android:layout_below="@+id/confirm_password"
        android:background="@drawable/round_corners_textview"
        android:ems="10"
        android:hint="********  "
    android:textSize="18sp"
    android:inputType="textPassword"
      android:paddingLeft="10dp"
        android:textColorHint="#9CA4A8" />
     
      <Button
          android:id="@+id/save_changes"
          android:layout_width="match_parent"
          android:layout_height="34dp"
          android:layout_below="@+id/confirmpassword"
          android:layout_marginTop="34dp"
          android:background="@drawable/button_style"
          android:shadowColor="#f9f9f9"
          android:shadowDx="1"
          android:shadowDy="1"
          android:shadowRadius="1"
          android:text="Save Changes"
          android:textColor="#52595C" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/save_changes"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_style"
        android:shadowColor="#f9f9f9"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Cancel"
        android:textColor="#52595C" />

</LinearLayout>
